{{!-- This is what the dashboard will look like --}}
<section>
    <div class="container mt-5 d-flex justify-content-center">
        <div class="row align-items-center text-center">
            <div class="col-12">
                <h2>Create New Post</h2>
            </div>
            <div class="col-12">
                <form class="new-post-form">
                    <div class="form-group">
                        <label for="post-title">Title</label>
                        <input class="form-control" type="text" id="post-title" name="post-title"></input>
                    </div>
                    <div class="form-group">
                        <label for="post-description">Description</label>
                        <textarea class="form-control" type="text" id="post-description" name="post-description"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mt-2">Create Post</button>
                </form>
            </div>
        </div>
    </div>
</section>

{{#if posts.length}}
<section>
    <div class="container mt-5 d-flex justify-content-center">
        <div class="row align-items-center text-center">
            <div class="col-12">
                <h2>Your Posts</h2>
            </div>
            <div class="col-12">
                {{#each posts as |post|}}
                {{> post-info post}}
                <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>
                {{/each}}
            </div>
            </div>
            </div>
</section>
{{/if}}

<script src="/js/create-post.js"></script>