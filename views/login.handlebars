{{!-- this is what the login page looks like --}}
<section class="vh-75">
    <div class="container py-5 h-75">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <div class="mb-md-5 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase">Log In</h2>
                            <p class="text-white-50 mb-5">Enter your email and password</p>
                            {{!-- enter email --}}
                            <div class="form-floating mb-4 text-dark">
                                <input type="email" class="form-control" id="email-login" placeholder="user@email.com">
                                <label for="email-login">Email</label>
                            </div>
                            {{!-- enter password --}}
                            <div class="form-floating mb-4 text-dark">
                                <input type="password" class="form-control" id="password-login" placeholder="password">
                                <label for="password-login">Password</label>
                            </div>
                            {{!-- button to submit and start login function --}}
                            <button type="submit" class="btn btn-outline-light btn-lg px-5" onclick="loginFormHandler()">Log In</button>
                        </div>
                    </div>
                    {{!-- link to sign up if you don't have an account --}}
                    <p class="mb-0">New user? <a href="/signup" class="text-white-50 fw-bold">Sign up here</a></p>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
</section>

<script src="/js/login.js"></script>